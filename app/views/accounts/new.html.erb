<% @title = "サインアップ" %>
<%= render "common/header" %>
<div class="jumbotron">
  <div class="container">
    <div class="col-md-6">
      <h2 class="h2-responsive">新規登録</h2>
        <%= form_for @new_account do |f| %>
          <% if @new_account.errors %>
            <div class="alert-danger">
              <%= @new_account.errors.messages %>
            </div>
          <% end %>
          <div class="form-item mt-2 mb-2">
            <div class="col-md-3 d-inline-block">ユーザーID: </div>
            <div class="col-md-9 d-inline-block"><%= f.text_field :user_id %></div>
          </div>
    
          <div class="form-item mt-2 mb-2">
            <div class="col-md-3 d-inline-block">パスワード: </div>
            <div class="col-md-9 d-inline-block"><%= f.password_field :password %></div>
          </div>
    
          <div class="form-item mt-2 mb-2">
            <div class="col-md-3 d-inline-block">表示名: </div>
            <div class="col-md-9 d-inline-block"><%= f.text_field :disp_name %></div>
          </div>
    
          <div class="form-item mt-2 mb-2">
            <div class="col-md-3 d-inline-block">Bio: </div>
            <div class="col-md-9 d-inline-block"><%= f.text_field :bio %></div>
          </div>
    
          <div class="form-item mt-2 mb-2">
            <div class="col-md-3 d-inline-block">場所:</div>
            <div class="col-md-9 d-inline-block"><%= f.text_field :location %></div>
          </div>
    
          <div class="form-item mt-2 mb-2">
            <div class="col-md-3 d-inline-block">画像: </div> 
            <div class="col-md-9  d-inline-block"><%= f.file_field :icon %></div>
          </div>
    
          <div class="form-item mt-2 text-right">
            <div class="">
              <%= f.submit "登録" %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>